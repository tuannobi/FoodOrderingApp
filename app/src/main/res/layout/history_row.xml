<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dayLichSu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DayLichSu"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/monthLichSu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MonthLichSu"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/yearLichSu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YearLichSu"
            android:textSize="20dp"/>
    </LinearLayout>
    <!--    <ImageView-->
    <!--        android:id="@+id/photo"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="100dp"-->
    <!--        android:src="@mipmap/ic_launcher"/>-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/orderidLichSu"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Order #215"
            android:textSize="10dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/totalmoneyLichSu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Total 2550000"
            android:textSize="10dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">

        <Button
            android:id="@+id/detailbuttonLichSu"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/detailbutton"
            android:text="Chi tiáº¿t"
            android:backgroundTint="@color/yellow" />
    </RelativeLayout>
</LinearLayout>