<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp"

    android:padding="10dp">


    <!--    <ImageView-->
    <!--        android:id="@+id/photo"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="100dp"-->
    <!--        android:src="@mipmap/ic_launcher"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/dongchitietkhachhang"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/buttonx"

                android:text="X"
                android:textColor="#FFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.045"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="129dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="118dp"

                android:layout_marginEnd="117dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/user" />

        </RelativeLayout>

        <TextView
        android:id="@+id/hotenkhachhang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="2dp"
        android:text="khach hang a"
        android:textSize="10dp"
            android:background="@drawable/boderset"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/ngaysinhkhachhang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="2dp"
        android:text="ngay sinh"
        android:textSize="10dp"
        android:background="@drawable/boderset"
        android:textStyle="bold" />
        <TextView
            android:id="@+id/diachikhachhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="2dp"
            android:text="dia chi"
            android:textSize="10dp"
            android:background="@drawable/boderset"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/emailkhachhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="2dp"
            android:text="email"
            android:textSize="10dp"
            android:background="@drawable/boderset"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sdtkhachhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="2dp"
            android:text="sdt "
            android:textSize="10dp"
            android:background="@drawable/boderset"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/doanhthukhachhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="2dp"
            android:text="Total 2550000"
            android:background="@drawable/boderset"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>